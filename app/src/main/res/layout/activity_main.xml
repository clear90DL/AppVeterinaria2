<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Principal.MainActivity">

    <!-- Contenido principal -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Imagen de fondo -->
        <ImageView
            android:id="@+id/imgFondo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/perros_gatos" />

        <!-- Toolbar semi-transparente -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#CC2196F3"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="VetCat"
            app:titleTextColor="@android:color/white" />

        <!-- Texto descriptivo -->
        <TextView
            android:id="@+id/txtDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido a VetCat\nTu asistente veterinario inteligente\n \nOfrecemos servicios veterinarios para brindarle una mejora atenciÃ³n para tus mascotas"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:background="#66000000"
            android:padding="20dp" />

    </RelativeLayout>

    <!-- Panel lateral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:itemIconTint="@null"
        app:headerLayout="@layout/nav_header"
        app:menu="@layout/menu_lateral_principal" />

</androidx.drawerlayout.widget.DrawerLayout>
