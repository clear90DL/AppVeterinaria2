<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Fila 1: Mascota y Estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvNombreMascotaCita"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre Mascota"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvEstadoCita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="PENDIENTE"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/bg_estado_pendiente"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- DueÃ±o (solo visible para admin) -->
        <TextView
            android:id="@+id/tvDueÃ±oCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="DueÃ±o: Juan PÃ©rez"
            android:textSize="14sp" />

        <!-- Servicio -->
        <TextView
            android:id="@+id/tvServicioItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Servicio: Consulta General"
            android:textSize="14sp" />

        <!-- Fecha y Hora -->
        <TextView
            android:id="@+id/tvFechaHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="ðŸ“… 15/12/2023 - 10:30"
            android:textSize="14sp" />

        <!-- Veterinario -->
        <TextView
            android:id="@+id/tvVeterinarioItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Veterinario: Dr. Juan GarcÃ­a"
            android:textSize="14sp" />

        <!-- Botones de acciÃ³n -->
        <LinearLayout
            android:id="@+id/layoutBotonesCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnAceptarCita"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="ACEPTAR"
                android:backgroundTint="@color/green"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnCancelarCita"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="CANCELAR"
                android:backgroundTint="@color/red"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>