<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- TÃ­tulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Mascota"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#7B1FA2"
            android:layout_marginBottom="24dp" />

        <!-- Nombre -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la mascota *"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/etEditarNombreMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Firulais"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Especie -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Especie *"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/etEditarEspecieMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Perro, Gato, etc."
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Raza -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raza"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/etEditarRazaMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Labrador, Siames, etc."
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Edad -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad *"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/etEditarEdadMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: 3"
            android:inputType="number"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Sexo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexo *"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />
        <RadioGroup
            android:id="@+id/rgEditarSexoMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rbEditarMacho"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Macho"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rbEditarHembra"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hembra"
                android:textSize="16sp" />
        </RadioGroup>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnCancelarEditar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancelar"
                android:textColor="@android:color/white"
                android:background="#757575"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnGuardarEditar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Guardar Cambios"
                android:textColor="@android:color/white"
                android:background="#7B1FA2" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>