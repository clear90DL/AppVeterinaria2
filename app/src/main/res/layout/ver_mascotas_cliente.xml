<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mis Mascotas"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#7B1FA2"
        android:layout_marginBottom="16dp" />

    <!-- Mensaje cuando no hay mascotas -->
    <TextView
        android:id="@+id/tvSinMascotas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No tienes mascotas registradas"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="#757575"
        android:padding="32dp"
        android:visibility="gone" />

    <!-- RecyclerView para mostrar las mascotas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMascotas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Botón para agregar nueva mascota -->
    <Button
        android:id="@+id/btnAgregarMascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Nueva Mascota"
        android:textColor="@android:color/white"
        android:background="#7B1FA2"
        android:layout_marginTop="16dp" />

</LinearLayout>