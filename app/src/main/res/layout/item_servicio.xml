<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreServicioItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consulta General"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"/>

            <TextView
                android:id="@+id/tvCategoriaItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoría: Medicina"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvDescripcionItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Revisión completa de signos vitales..."
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#616161"/>

            <TextView
                android:id="@+id/tvDuracionItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏱ 30 min"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:textColor="#1976D2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/tvCostoItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$350.00"
                android:textColor="#2E7D32"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEstadoServicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponible"
                android:textSize="10sp"
                android:textColor="#4CAF50"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>